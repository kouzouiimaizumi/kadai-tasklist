<div class="row">
    <div class="col-sx-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-5">
   

<%= form_for(@tasks) do |f| %>

  <% if task.errors.any? %>
      <div class="alert alert-warning">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  <%= f.label :status, '状況　:' %>
  <%= f.text_field :status %>
  </div>
  
  <div class="form-group">
  <%= f.label :content, 'タスク:' %>
  <%= f.text_field :content %>
  </div>
  


  <%= f.submit '投稿' %>
<% end %>


  </div>
</div>

